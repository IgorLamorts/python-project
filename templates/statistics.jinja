{% extends "base.jinja" %}

{% block header %}
  <h1>{% block title %} Статистика {% endblock %}</h1>
{% endblock %}

{% block content %}
<article class="post">
    <table>
      <tr>
        <th>Записів:</th>
        <th>{{ statistics["item_number"] }}</th>
      </tr>
      <tr>
        <th>Найбільше Значення:</th>
        <th>{{ statistics["max"] }}</th>
      </tr>
      <tr>
        <th>Найменше Значення:</th>
        <th>{{ statistics["min"] }}</th>
      </tr>
      <tr>
        <th>Середнє Значення:</th>
        <th>{{ statistics["mean"] }}</th>
      </tr>
    </table>
</article>
<article class="post">
    {% if search %}
        <div><h2>Пошуковий запит</h2></div>
    {% if 'all' in search %}
        Пошук за запитом: "{{ search['all'] }}"
    {% else %}
        <table>
          <tr>
            <th>Поле</th>
            <th>Значення</th>
          </tr>
            {% for field, value in search.items() %}
              <tr>
                <th>{{ field }}</th>
                <th>{{ value }}</th>
              </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endif %}
</article>
{% endblock %}